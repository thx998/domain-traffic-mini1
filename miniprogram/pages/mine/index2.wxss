/* pages/mine/index2.wxss */

.wrap{
  background-color: #f5f5f5;
  min-height: 100vh;
}

.banner{
  width: 100%;
}
.banner image{
  width: 100%;
}

.info{
  display: flex;
  align-items: center;
  padding: 30rpx;
  background-color: #fff;
  margin: 0 10rpx;
  border-radius: 10rpx;
}

.avatar{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
  border: 1px solid #eee;
  margin-right: 20rpx;
  overflow: hidden;
}
.avatar image{
  width: 100rpx;
  height: 100rpx;
  border-radius: 100rpx;
}

.info-name{
  padding-bottom: 10rpx;
}

.tab{
  display: flex;
  margin: 10rpx;
}
.tab .tab-item{
  background-color: #fff;
  flex: 1;
  text-align: center;
  margin: 0 5rpx;
  padding: 50rpx 0;
  border-radius: 10rpx;
}
.tab .tab-item:first-child{
  margin-left: 0;
}
.tab .tab-item:last-child{
  margin-right: 0;
}
.tab .tab-item image{
  width: 120rpx;
  height: 120rpx;
}
.tab .tab-item text{
  display: inline-block;
  color: #854a59;
  font-size: 38rpx;
  padding-bottom: 40rpx;
}
.tab .tab-item:nth-child(2) text{
  padding-bottom: 33rpx;
}

.info-name button{
  border: none;
  background-color: transparent;
}
.info-name button::after{
  border: none;
  background-color: transparent;
}

